@model Fitnesspoint.Models.DietPlanModel

@{
    ViewBag.Title = "createDietPlan";
    if (User.Identity.IsAuthenticated)
    {
        string role = Session["Role"].ToString();
        if (role == "Admin")
        {
            Layout = "~/Views/Shared/_adminLayout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_userLayout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2 style="color:antiquewhite;text-align:center">Create Diet Plan</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>DietPlanModel</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @style = "color:antiquewhite" })
        <div class="form-group">
            @Html.LabelFor(model => model.Slots, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:antiquewhite;font-weight:900;font-size:larger" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Slots, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Slots, "", new { @style = "color:antiquewhite" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FoodType, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:antiquewhite;font-weight:900;font-size:larger" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FoodType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FoodType, "", new { @style = "color:antiquewhite" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FatRatio, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:antiquewhite;font-weight:900;font-size:larger" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FatRatio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FatRatio, "", new { @style = "color:antiquewhite" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CarbsRatio, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:antiquewhite;font-weight:900;font-size:larger" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CarbsRatio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CarbsRatio, "", new { @style = "color:antiquewhite" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProteinRatio, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:antiquewhite;font-weight:900;font-size:larger" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProteinRatio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProteinRatio, "", new { @style = "color:antiquewhite" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2", @style = "color:antiquewhite;font-weight:900;font-size:larger" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @Value = Session["Id"], @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @style = "color:antiquewhite" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Diet Plan" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>

}
<div>
    <p style="font-size:large;font-weight:900;text-align:right">@Html.ActionLink("List All Diet Plans", "ListAllDietPlans", new { user_id = Session["Id"] })</p>
</div>


